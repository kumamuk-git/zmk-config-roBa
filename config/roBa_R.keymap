#include "roBa_L.keymap"

#include "boards/shields/Test/roBa_R.overlay"
&trackball {
    // automouse-layer = <L_AUTOMOUSE>;
    scroll-layers = <L_ALT_SCROLL L_COMMAND_SCROLL>;
    snipe-layers = <L_ALT_CURSORSNIPE L_COMMAND_CURSORSNIPE>;

    arrows {
        layers = <L_LEFTARROW L_LEFTARROW_ENABLETRACKBALL L_RIGHTARROW L_RIGHTARROW_ENABLETRACKBALL>;
        bindings =
            <&kp RIGHT_ARROW>,
            <&kp LEFT_ARROW>,
            <&kp UP_ARROW>,
            <&kp DOWN_ARROW>;

        tick = <10>;
        wait-ms = <5>;
        tap-ms = <5>;
    };

    volume {
        layers = <L_UBUNTU_VOLUME_TOYOUTUBE L_WIN_VOLUME_TOYOUTUBE L_MAC_VOLUME_TOYOUTUBE L_IPAD_VOLUME>;
        bindings =
                <&none>,
                <&none>,
                <&kp C_VOLUME_UP>,
                <&kp C_VOLUME_DOWN>;

        wait-ms = <5>;
        tap-ms = <5>;
    };
};